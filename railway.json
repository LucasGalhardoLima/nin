{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile",
        "watchPatterns": [
            "apps/api/**",
            "packages/**",
            "Dockerfile",
            "turbo.json",
            "package.json",
            "pnpm-lock.yaml"
        ]
    },
    "deploy": {
        "startCommand": "node apps/api/dist/apps/api/src/main.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}